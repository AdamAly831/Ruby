	<% if flash[:success] %>
  			<p><%= flash[:success] %></p>
		</div>
	<% end %>
	<table>
		<tr>
			<td>Submitted Information </td>
		</tr>
		<tr>
			<td>Name:</td>
			<td><%= @result['name'] %></td>
		</tr>
		<tr>
			<td>Dojo Location:</td>
			<td><%= @result['location'] %></td>
		</tr>
		<tr>
